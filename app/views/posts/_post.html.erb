 <h2 class="post-title"><%= link_to_unless_current(post.title, post_path(post)) %></h2>
 <h4 class="post-date">Written <%= time_ago_in_words(post.created_at) %> ago</h4>
 <h4 class="post-tags">Tagged as <%= post.tags.map {|tag| tag.name}.join(", ") %></h4>
 <div class="post-body">
     <%= simple_format(post.content) %>
 </div>
