<%=  form_tag(posts_path) do %>
    <div class="post-field">
        <%= label_tag("Title: ") %> <br/>
        <%= text_field_tag("title", @post.title) %>
    </div>

    <div class="post-field">
        <%= label_tag("Tags: ") %> <br/>
        <%= text_field_tag("tags", @post.tag_names) %>
    </div>

    <div class="post-field">
        <%= label_tag("Content: ") %> <br/>
        <%= text_area_tag("content", @post.content) %>
    </div>

    <%= button_tag("Create Post!") %>
<% end %>
