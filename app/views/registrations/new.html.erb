<h2>New User</h2>

<%= form_tag(signups_path) do %>
    <div class="user-field">
        <%= label_tag("First") %> <br/>
        <%= text_field_tag("first", @user.first_name) %>
    </div>

    <div class="user-field">
        <%= label_tag("Last") %> <br/>
        <%= text_field_tag("last", @user.last_name) %>
    </div>

    <div class="user-field">
        <%= label_tag("Email") %> <br/>
        <%= text_field_tag("email", @user.email) %>
    </div>

    <div class="user-field">
        <%= label_tag("Password") %> <br/>
        <%= password_field_tag("password", @user.password) %>
    </div>

    <%= button_tag("Submit") %>
<% end %>

<%= link_to("Nevermind", root_path) %>
